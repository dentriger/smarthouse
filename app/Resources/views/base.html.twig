<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <script type="text/javascript" src="{{ asset('js/jquery-3.2.1.min.js') }}"></script>
    <script src="{{ asset('libs/bootstrap-3.3.7/js/bootstrap.js') }}"></script>
    <script src="{{ asset('bundles/catalog/js/grid_plugin.js') }}"></script>

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="{{ asset('bundles/catalog/css/style.css') }}">
    <script src="{{ asset('libs/owl-carousel/owl.carousel.js') }}"></script>
    <script src="{{ asset('libs/js/custom-js.js') }}"></script>
</head>
<body>

<div class="container-fluid">
    <header>
        <div class="row header_row_1">
            <div class="col-sm-3 header_left">
                <div class="logo_main">
                    <a href="/"><img src="{{ asset('images/logo.png') }}" alt=""></a>
                </div>
            </div>
            <ul class="header_user">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li><a href="{{ path('logout') }}"><i class="fa fa-sign-out"></i>Logout</a></li>
                    <li><a href="#"><i class="fa fa-user" aria-hidden="true"></i> {{ app.user.username }}</a></li>
                {% else %}
                    <li><a href="{{ path('login') }}"><i class="fa fa-user"></i>Sign in</a></li>
                    <li><a href="{{ path('user_registration') }}"><i class="fa fa-plus" aria-hidden="true"></i>Create account</a></li>
                {% endif %}
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="row header_row__3">
            {{ include('menu/menubar.html.twig') }}
        </div>
    </header>
    {% block body %}{% endblock %}
</div>
{% block javascripts %}
{% endblock %}
</body>
</html>